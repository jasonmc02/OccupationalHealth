<div class="row form">
  <div class="col-sm-12">
    <%= f.label :interaction, :class => '' %>
    <div class="box">
      <div class="radio">
        <%= f.label :interaction, I18n.t("helpers.booleans.affirmative"), :value => "true"  %>
        <%= f.radio_button :interaction, true, :class => "interaction" %>
      </div>
      <div class="radio">
        <%= f.label :interaction, I18n.t("helpers.booleans.negative"), :value => "false" %>
        <%= f.radio_button :interaction, false, :checked => true, :class => "interaction" %>
      </div>
      <div class="form-group which_interaction">
        <%= f.label :interaction_name, :class => 'col-sm-4 input-label' %>
        <div class="col-sm-6">
          <%= f.text_field :interaction_name, :class => 'form-control spaceless', :disabled => true %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="control-group">
  <%= f.label :integrate_investigation, :class => 'control-label' %>
  <div class="controls">
    <%= f.check_box :integrate_investigation, :class => 'text_field' %>
  </div>
</div>
<div class="control-group">
  <%= f.label :integrate_investigation_yes, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :integrate_investigation_yes, :class => 'text_field' %>
  </div>
</div>
<div class="control-group">
  <%= f.label :integrate_investigation_no, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :integrate_investigation_no, :class => 'text_field' %>
  </div>
</div>

<div class="row form marginless">
  <div class="col-sm-12">
    <label>
      <%= I18n.t "formulary_fields.formulary_research_3" %>
    </label>
  </div>
</div>
<div class="row form">
  <div class="col-lg-12">
    <div class="three-column-checkboxes">
      <%= f.check_box :test_hypothesis, :class => '' %><%= f.label :test_hypothesis, :class => '' %>
    </div>
    <div class="three-column-checkboxes">
      <%= f.check_box :generate_knowledge, :class => '' %><%= f.label :generate_knowledge, :class => '' %>
    </div>
    <div class="three-column-checkboxes">
      <%= f.check_box :inlcude_actor, :class => '' %><%= f.label :inlcude_actor, :class => '' %>
    </div>
    <div class="three-column-checkboxes">
      <%= f.check_box :translate_knowledge, :class => '' %><%= f.label :translate_knowledge, :class => '' %>
    </div>
    <div class="three-column-checkboxes">
      <%= f.check_box :influencing_legislation, :class => '' %><%= f.label :influencing_legislation, :class => '' %>
    </div>
    <div class="three-column-checkboxes">
      <%= f.check_box :no_impact, :class => '' %><%= f.label :no_impact, :class => '' %>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="three-column-checkboxes">
      <%= f.check_box :other_integration, :class => '' %><%= f.label :other_integration, :class => '' %>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="form-group marginless which_integration">
      <%= f.label :which_integration, :class => 'col-sm-1 input-label' %>
      <div class="col-sm-7">
        <%= f.text_field :which_integration, :class => 'form-control spaceless', :disabled => true %>
      </div>
    </div>
  </div>
</div>