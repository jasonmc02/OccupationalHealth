<div id="service_1">
  <div class="container">
    <div class="section_header">
      <h3><%= t "stats.stats" %></h3>
      <%= link_to t("helpers.links.refresh"), stats_home_index_path, :class => 'btn btn-primary pull-right' %>
    </div>
    <div class="header-info">
      <p class="text-justified">
        <%= t "stats.info_text" %>
      </p>
    </div>
    <div class="row service_wrapper">
      <div class="col-sm-4">
        <div class="feature">
          <div class="text text-centered">
            <h6></h6>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="feature">
          <div class="text text-centered">
            <h6><%= t "stats.used" %></h6>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="feature">
          <div class="text text-centered">
            <h6><%= t "stats.total" %></h6>
          </div>
        </div>
      </div>
    </div>
    <div class="row service_wrapper custom-well">
      <div class="col-sm-4">
        <div class="feature">
          <div class="text text-centered">
            <p>
              <%= t "stats.ram" %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="feature">
          <div class="text text-centered">
            <p id="ram-used">
              <%= convertQuantity(@ram_used) %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="feature">
          <div class="text text-centered">
            <p id="ram-total">
              <%= convertQuantity(@ram_total) %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="row service_wrapper custom-well">
      <div class="col-sm-4">
        <div class="feature">
          <div class="text text-centered">
            <p>
              <%= t "stats.hdd" %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="feature">
          <div class="text text-centered">
            <p id="hdd-used">
              <%= convertQuantity(@hdd_used) %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="feature">
          <div class="text text-centered">
            <p id="hdd-total">
              <%= convertQuantity(@hdd_total) %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag "js/stats" %>