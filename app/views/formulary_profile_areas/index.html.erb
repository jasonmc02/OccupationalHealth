<%- model_class = FormularyProfileArea -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:mining) %></th>
      <th><%= model_class.human_attribute_name(:pesticide) %></th>
      <th><%= model_class.human_attribute_name(:occupational_health) %></th>
      <th><%= model_class.human_attribute_name(:community_paticipation) %></th>
      <th><%= model_class.human_attribute_name(:watershed_management) %></th>
      <th><%= model_class.human_attribute_name(:solid_waste_management) %></th>
      <th><%= model_class.human_attribute_name(:public_health) %></th>
      <th><%= model_class.human_attribute_name(:animal_health) %></th>
      <th><%= model_class.human_attribute_name(:determinant_of_health) %></th>
      <th><%= model_class.human_attribute_name(:food_sovereignty) %></th>
      <th><%= model_class.human_attribute_name(:indigenous_health) %></th>
      <th><%= model_class.human_attribute_name(:climate_change) %></th>
      <th><%= model_class.human_attribute_name(:forest_management) %></th>
      <th><%= model_class.human_attribute_name(:other) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @formulary_profile_areas.each do |formulary_profile_area| %>
      <tr>
        <td><%= link_to formulary_profile_area.id, formulary_profile_area_path(formulary_profile_area) %></td>
        <td><%= formulary_profile_area.mining %></td>
        <td><%= formulary_profile_area.pesticide %></td>
        <td><%= formulary_profile_area.occupational_health %></td>
        <td><%= formulary_profile_area.community_paticipation %></td>
        <td><%= formulary_profile_area.watershed_management %></td>
        <td><%= formulary_profile_area.solid_waste_management %></td>
        <td><%= formulary_profile_area.public_health %></td>
        <td><%= formulary_profile_area.animal_health %></td>
        <td><%= formulary_profile_area.determinant_of_health %></td>
        <td><%= formulary_profile_area.food_sovereignty %></td>
        <td><%= formulary_profile_area.indigenous_health %></td>
        <td><%= formulary_profile_area.climate_change %></td>
        <td><%= formulary_profile_area.forest_management %></td>
        <td><%= formulary_profile_area.other %></td>
        <td><%=l formulary_profile_area.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_formulary_profile_area_path(formulary_profile_area), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      formulary_profile_area_path(formulary_profile_area),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_formulary_profile_area_path,
            :class => 'btn btn-primary' %>
