<%- model_class = FormularyContextDescription -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:formulary_context_id) %>:</strong></dt>
  <dd><%= @formulary_context_description.formulary_context_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_term) %>:</strong></dt>
  <dd><%= @formulary_context_description.project_term %></dd>
  <dt><strong><%= model_class.human_attribute_name(:require_integration) %>:</strong></dt>
  <dd><%= @formulary_context_description.require_integration %></dd>
  <dt><strong><%= model_class.human_attribute_name(:require_integration_name) %>:</strong></dt>
  <dd><%= @formulary_context_description.require_integration_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
  <dd><%= @formulary_context_description.gender %></dd>
  <dt><strong><%= model_class.human_attribute_name(:equity) %>:</strong></dt>
  <dd><%= @formulary_context_description.equity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:community_participation) %>:</strong></dt>
  <dd><%= @formulary_context_description.community_participation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:policy) %>:</strong></dt>
  <dd><%= @formulary_context_description.policy %></dd>
  <dt><strong><%= model_class.human_attribute_name(:complexity) %>:</strong></dt>
  <dd><%= @formulary_context_description.complexity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:other) %>:</strong></dt>
  <dd><%= @formulary_context_description.other %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              formulary_context_descriptions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_formulary_context_description_path(@formulary_context_description), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              formulary_context_description_path(@formulary_context_description),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
