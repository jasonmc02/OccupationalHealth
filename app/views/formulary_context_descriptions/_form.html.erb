<%= form_for @formulary_context_description, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :formulary_context_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :formulary_context_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :project_term, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :project_term, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :require_integration, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :require_integration, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :require_integration_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :require_integration_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gender, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gender, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :equity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :equity, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :community_participation, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :community_participation, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :policy, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :policy, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :complexity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :complexity, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :other, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :other, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                formulary_context_descriptions_path, :class => 'btn' %>
  </div>
<% end %>
