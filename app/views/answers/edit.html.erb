<%- model_class = Answer -%>
<div id="contact">
  <div class="container">
    <div class="section_header">
      <h3><%= t("helpers.links.edit") + ' '+ model_class.model_name.human.titleize %></h3>
    </div>
    <div class="row contact">
      <%= render :partial => 'form' %>
    </div>
  </div>
</div>
<%= javascript_include_tag "js/answers" %>
<% if locale.eql?(:es) %>
  <%= javascript_include_tag "lib/dist/localization/messages_es.min" %>
<% elsif locale.eql?(:fr) %>
  <%= javascript_include_tag "lib/dist/localization/messages_fr.min" %>
<% elsif locale.eql?(:pt) %>
  <%= javascript_include_tag "lib/dist/localization/messages_pt_BR.min" %>
<% end %>