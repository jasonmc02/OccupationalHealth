<%- model_class = FormularyProfile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:period) %></th>
      <th><%= model_class.human_attribute_name(:region) %></th>
      <th><%= model_class.human_attribute_name(:institution) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:objective) %></th>
      <th><%= model_class.human_attribute_name(:discipline) %></th>
      <th><%= model_class.human_attribute_name(:success) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @formulary_profiles.each do |formulary_profile| %>
      <tr>
        <td><%= link_to formulary_profile.id, formulary_profile_path(formulary_profile) %></td>
        <td><%= formulary_profile.name %></td>
        <td><%= formulary_profile.period %></td>
        <td><%= formulary_profile.region %></td>
        <td><%= formulary_profile.institution %></td>
        <td><%= formulary_profile.description %></td>
        <td><%= formulary_profile.objective %></td>
        <td><%= formulary_profile.discipline %></td>
        <td><%= formulary_profile.success %></td>
        <td><%=l formulary_profile.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_formulary_profile_path(formulary_profile), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      formulary_profile_path(formulary_profile),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_formulary_profile_path,
            :class => 'btn btn-primary' %>
